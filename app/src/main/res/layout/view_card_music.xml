<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="#1D252A"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/music_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_music" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="媒体中心"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/music_resource"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="酷狗音乐"
            android:textColor="@color/white"
            android:textSize="10dp" />
        
        <ImageView
            android:id="@+id/music_switch_resource"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_switch_resource" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/music_album"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/img_album" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/music_name_and_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="婚礼的祝福-陈奕迅"
                android:textColor="@color/white" />
            
            <SeekBar
                android:id="@+id/music_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <ImageView
                    android:id="@+id/music_previous"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_previous" />
                
                <ImageView
                    android:id="@+id/music_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    android:contentDescription="播放"
                    android:background="@drawable/img_play"
                    tools:ignore="HardcodedText" />
                
                <ImageView
                    android:id="@+id/music_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/img_pause"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/music_next"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/img_next" />
            </LinearLayout>
        </LinearLayout>
    
    </LinearLayout>

</LinearLayout>