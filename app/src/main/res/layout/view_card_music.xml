<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="400dp"
    android:alpha="0.9"
    android:background="@drawable/shape_media_card_radius"
    android:backgroundTint="#1D252E"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/music_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_media_card_radius"
            android:src="@drawable/img_music" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="媒体中心"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/music_card_zoom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_switch_resource" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/music_album"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shape_media_card_radius"
            android:src="@drawable/img_album" />
        
        <!--android:layout_marginStart="30dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/music_name_and_singer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="无播放"
                android:textColor="@color/white"
                android:textStyle="bold" />
            
            <SeekBar
                android:id="@+id/music_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@null" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <ImageView
                    android:id="@+id/music_previous"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_previous" />
                
                <ImageView
                    android:id="@+id/music_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/img_play"
                    android:contentDescription="播放"
                    tools:ignore="HardcodedText" />
                
                <ImageView
                    android:id="@+id/music_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/img_pause"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/music_next"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/img_next" />
            </LinearLayout>
        </LinearLayout>
    
    </LinearLayout>

</LinearLayout>